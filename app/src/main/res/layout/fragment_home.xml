<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewCount">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- Section Header -->
            <include
                android:id="@+id/section_header"
                layout="@layout/section_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <!-- Section Creator -->
            <include
                android:id="@+id/inc_section_creators"
                layout="@layout/section_creators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/section_header"/>

            <!-- Section Categories -->
            <include
                android:id="@+id/inc_section_genres"
                layout="@layout/section_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/inc_section_creators"/>

            <!-- Section Most Popular -->
            <include
                android:id="@+id/inc_section_games"
                layout="@layout/section_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/inc_section_genres"/>

            <!-- Section New and trending -->
            <include
                android:id="@+id/inc_section_trending"
                layout="@layout/section_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/inc_section_games"/>

            <!-- include shimmer loading home -->
            <include
                android:id="@+id/progress_loader"
                layout="@layout/view_shimmer_loading_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/section_header"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>